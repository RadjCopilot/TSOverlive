{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../public",
    "distDir": "../public",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "TS6 OverLive",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": false,
        "minimize": false,
        "unmaximize": false,
        "unminimize": true,
        "startDragging": true,
        "create": true,
        "setPosition": true,
        "setSize": true,
        "setFocus": true,
        "setIgnoreCursorEvents": true
      },
      "globalShortcut": {
        "all": true
      },
      "updater": {
        "active": true,
        "endpoints": [
          "https://raw.githubusercontent.com/RadjCopilot/TS6Overlay/main/updater.json"
        ],
        "dialog": true,
        "pubkey": "0Z8RPnjd7C8ezC4iiDKrLIsdSg99caAOyjB5pgtgPhY="
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.radj.ts6overlive",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "Copyright © 2025 Radj",
      "category": "Utility",
      "shortDescription": "TS6 OverLive",
      "longDescription": "Оверлей виджет для TeamSpeak 6 с отображением активных пользователей в канале",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "TS6 OverLive",
        "width": 280,
        "height": 280,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "hiddenTitle": true,
        "skipTaskbar": false,
        "visible": true,
        "url": "index.html"
      }
    ],
    "systemTray": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    }
  }
}
